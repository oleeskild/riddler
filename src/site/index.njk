---
    title: Foos invite
    layout: layouts/base.njk
---

{% block main %}
<div class="flex-container">

    <form name="greeting-card" method="POST" action="/new" class="flex-container" >
        <div class="greeting-form">
                <p>
                    <label for="message">Riddle</label>
                    <textarea cols="25" rows="10" id="riddle" name="riddle"></textarea>
                </p>
                <p>
                    <label for="image">Image</label>
                    <div id="drop-area">
                        <input type="file" id="image" name="image" accept="image/*" class="dropzone" />
                    </div>
                </p>
                <p>
                    <input type="submit" value="Create QR Code">
                </p>
        </div>
    </form>
</div>
{% endblock %}

{% block scripts %}
{%set js%}
{% include "js/core.js" %}
{% include "js/colorPicker.js" %}
{% include "js/dropzone.min.js" %}
{% include "js/fileUploader.js" %}
{% endset %}
<script> {{js | safe}} </script>
{% endblock %}